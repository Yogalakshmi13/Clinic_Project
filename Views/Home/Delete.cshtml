@model ClinicProject.Models.Schedules
@using (Html.BeginForm("CancelAppointment", "Home", FormMethod.Post))
{
<head>
    <style>
        body {
            background-image: url("/images/Dimg1.jpeg");
        }
    </style>
</head>
    <body style="background-size:cover">
        <table>
            <tr>
                <td>@Html.DisplayName("Patientid")</td>
                <td>
                    @Html.TextBoxFor(m => m.PatientId)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayName("Click")
                </td>
                <td>
                    <input type="submit" value="CancelAppointment" asp-action="CancelAppointment" asp-controller="Home" />
                </td>
            </tr>
        </table>
    </body>
}
